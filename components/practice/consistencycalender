import React from 'react';
import { Card } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Calendar, TrendingUp, Award } from "lucide-react";
import { format, startOfMonth, endOfMonth, eachDayOfInterval, isSameDay, parseISO, subMonths, differenceInDays } from 'date-fns';

export default function ConsistencyCalendar({ sessions }) {
  const now = new Date();
  const monthStart = startOfMonth(now);
  const monthEnd = endOfMonth(now);
  const daysInMonth = eachDayOfInterval({ start: monthStart, end: monthEnd });

  const sessionsByDate = sessions.reduce((acc, session) => {
    const date = session.date;
    if (!acc[date]) acc[date] = [];
    acc[date].push(session);
    return acc;
  }, {});

  const getSessionsForDay = (day) => {
    const dateStr = format(day, 'yyyy-MM-dd');
    return sessionsByDate[dateStr] || [];
  };

  const getIntensityColor = (sessions) => {
    if (sessions.length === 0) return 'bg-slate-50';
    const totalMinutes = sessions.reduce((sum, s) => sum + (s.duration_minutes || 0), 0);
    if (totalMinutes >= 120) return 'bg-emerald-600';
    if (totalMinutes >= 60) return 'bg-emerald-400';
    if (totalMinutes >= 30) return 'bg-emerald-200';
    return 'bg-emerald-100';
  };

  // Calculate streak
  const sortedSessions = [...sessions].sort((a, b) => new Date(b.date) - new Date(a.date));
  let currentStreak = 0;
  let lastDate = new Date();
  
  for (const session of sortedSessions) {
    const sessionDate = parseISO(session.date);
    const daysDiff = differenceInDays(lastDate, sessionDate);
    
    if (currentStreak === 0 || daysDiff <= 1) {
      currentStreak++;
      lastDate = sessionDate;
    } else {
      break;
    }
  }

  const thisMonthSessions = sessions.filter(s => {
    const d = parseISO(s.date);
    return d >= monthStart && d <= monthEnd;
  }).length;

  const lastMonthSessions = sessions.filter(s => {
    const d = parseISO(s.date);
    const lastMonthStart = startOfMonth(subMonths(now, 1));
    const lastMonthEnd = endOfMonth(subMonths(now, 1));
    return d >= lastMonthStart && d <= lastMonthEnd;
  }).length;

  const weekDays = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];

  return (
    <Card className="p-6 bg-white border-0 shadow-sm">
      <div className="flex items-center justify-between mb-4">
        <div className="flex items-center gap-2">
          <Calendar className="w-5 h-5 text-blue-600" />
          <h3 className="text-lg font-semibold text-slate-800">Practice Consistency</h3>
        </div>
        <Badge className="bg-blue-100 text-blue-700">
          {format(now, 'MMMM yyyy')}
        </Badge>
      </div>

      {/* Stats */}
      <div className="grid grid-cols-3 gap-4 mb-6">
        <div className="text-center">
          <p className="text-2xl font-bold text-slate-800">{currentStreak}</p>
          <p className="text-xs text-slate-500">Day Streak</p>
        </div>
        <div className="text-center">
          <p className="text-2xl font-bold text-slate-800">{thisMonthSessions}</p>
          <p className="text-xs text-slate-500">This Month</p>
        </div>
        <div className="text-center">
          <div className="flex items-center justify-center gap-1">
            <p className="text-2xl font-bold text-slate-800">{thisMonthSessions - lastMonthSessions}</p>
            {thisMonthSessions > lastMonthSessions && (
              <TrendingUp className="w-4 h-4 text-emerald-500" />
            )}
          </div>
          <p className="text-xs text-slate-500">vs Last Month</p>
        </div>
      </div>

      {/* Calendar Grid */}
      <div className="space-y-2">
        {/* Weekday headers */}
        <div className="grid grid-cols-7 gap-1 mb-2">
          {weekDays.map(day => (
            <div key={day} className="text-center text-xs font-medium text-slate-400">
              {day}
            </div>
          ))}
        </div>

        {/* Days grid */}
        <div className="grid grid-cols-7 gap-1">
          {/* Empty cells for days before month starts */}
          {Array.from({ length: monthStart.getDay() }).map((_, i) => (
            <div key={`empty-${i}`} />
          ))}
          
          {/* Days of the month */}
          {daysInMonth.map(day => {
            const daySessions = getSessionsForDay(day);
            const isToday = isSameDay(day, now);
            const totalMinutes = daySessions.reduce((sum, s) => sum + (s.duration_minutes || 0), 0);
            
            return (
              <div
                key={day.toString()}
                className={`
                  aspect-square rounded-lg flex flex-col items-center justify-center
                  ${getIntensityColor(daySessions)}
                  ${isToday ? 'ring-2 ring-blue-500' : ''}
                  transition-all hover:scale-110 cursor-pointer
                  ${daySessions.length > 0 ? 'shadow-sm' : ''}
                `}
                title={daySessions.length > 0 ? `${totalMinutes} minutes` : 'No practice'}
              >
                <span className={`text-xs font-medium ${
                  daySessions.length > 0 ? 'text-slate-700' : 'text-slate-400'
                }`}>
                  {format(day, 'd')}
                </span>
                {daySessions.length > 0 && (
                  <span className="text-[10px] text-slate-600">
                    {totalMinutes}m
                  </span>
                )}
              </div>
            );
          })}
        </div>
      </div>

      {/* Legend */}
      <div className="flex items-center justify-center gap-4 mt-6 text-xs text-slate-500">
        <div className="flex items-center gap-1">
          <div className="w-3 h-3 rounded bg-slate-50 border" />
          <span>None</span>
        </div>
        <div className="flex items-center gap-1">
          <div className="w-3 h-3 rounded bg-emerald-100" />
          <span>&lt;30m</span>
        </div>
        <div className="flex items-center gap-1">
          <div className="w-3 h-3 rounded bg-emerald-200" />
          <span>30-60m</span>
        </div>
        <div className="flex items-center gap-1">
          <div className="w-3 h-3 rounded bg-emerald-400" />
          <span>60-120m</span>
        </div>
        <div className="flex items-center gap-1">
          <div className="w-3 h-3 rounded bg-emerald-600" />
          <span>120m+</span>
        </div>
      </div>

      {currentStreak >= 7 && (
        <div className="mt-4 p-3 bg-gradient-to-r from-amber-50 to-orange-50 rounded-lg border border-amber-200">
          <p className="text-sm text-amber-700 flex items-center gap-2">
            <Award className="w-4 h-4" />
            <strong>Amazing!</strong> {currentStreak} day practice streak!
          </p>
        </div>
      )}
    </Card>
  );
}